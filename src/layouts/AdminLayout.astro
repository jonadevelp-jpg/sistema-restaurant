---
import Sidebar from '../frontend/components/admin/Sidebar';
import AdminLayoutWrapper from '../frontend/components/admin/AdminLayoutWrapper';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0, user-scalable=yes, viewport-fit=cover" />
    <meta name="theme-color" content="#1e293b" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content="Panel de administración - Gourmet Árabe" />
    <title>{title} - Admin | Gourmet Árabe</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-slate-50 min-h-screen">
    <AdminLayoutWrapper client:only="react" currentPath={currentPath}>
      <slot />
    </AdminLayoutWrapper>
  </body>
</html>

<style is:global>
  html {
    font-family: 'Playfair Display', serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  /* Mejoras de accesibilidad y touch */
  * {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0.1);
  }
  
  /* Botones y elementos interactivos más grandes en móvil */
  @media (max-width: 640px) {
    button, a, input, select, textarea {
      min-height: 44px;
      min-width: 44px;
    }
  }
  
  /* Mejor scroll en móvil */
  .overflow-y-auto {
    -webkit-overflow-scrolling: touch;
    overscroll-behavior: contain;
  }
  
  /* Focus visible mejorado */
  *:focus-visible {
    outline: 3px solid #3b82f6;
    outline-offset: 2px;
  }
  
  /* Prevenir zoom en inputs en iOS */
  @media screen and (max-width: 768px) {
    input[type="text"],
    input[type="email"],
    input[type="number"],
    input[type="password"],
    select,
    textarea {
      font-size: 16px !important;
    }
  }
</style>

