---
import Sidebar from '../react/components/Sidebar';
import AdminLayoutWrapper from '../react/components/AdminLayoutWrapper';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content="Panel de administración - Gourmet Árabe" />
    <title>{title} - Admin | Gourmet Árabe</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-slate-50 min-h-screen">
    <AdminLayoutWrapper client:only="react" currentPath={currentPath}>
      <slot />
    </AdminLayoutWrapper>
  </body>
</html>

<style is:global>
  html {
    font-family: 'Playfair Display', serif;
  }
</style>

