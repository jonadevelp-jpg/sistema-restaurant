---
import PublicLayout from '../layouts/PublicLayout.astro';
import HalalInfo from '../components/HalalInfo';
import NavigationMenu from '../components/NavigationMenu';
import HeroDynamic from '../components/HeroDynamic';
import Footer from '../components/Footer.astro';
import { supabase } from '../lib/supabase';

// Verificar configuraci√≥n de Supabase
const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL || import.meta.env.SUPABASE_URL;
const supabaseKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY || import.meta.env.SUPABASE_ANON_KEY;
const isConfigured = !!(supabaseUrl && supabaseKey);

// Obtener categor√≠as activas
let activeCategories: any[] = [];
let featuredItems: any[] = [];
let heroImages: string[] = [];

if (isConfigured && supabaseUrl !== 'https://placeholder.supabase.co') {
  try {
    // Categor√≠as v√°lidas para completos/churrascos
    const validCategorySlugs = ['destacados', 'completos', 'sandwiches', 'acompanamientos', 'pollo', 'bebidas'];
    
    // Obtener solo las categor√≠as v√°lidas y activas
    const { data: cats, error: catsError } = await supabase
      .from('categories')
      .select('*')
      .eq('is_active', true)
      .in('slug', validCategorySlugs)
      .order('order_num', { ascending: true });

    if (catsError) {
      console.error('‚ùå Error obteniendo categor√≠as:', catsError);
    } else if (cats && cats.length > 0) {
      activeCategories = cats;
      console.log('‚úÖ Categor√≠as encontradas:', cats.length, cats.map(c => c.name));
    } else {
      console.warn('‚ö†Ô∏è No se encontraron categor√≠as activas. Verifica que hayas ejecutado el script SQL: database/SEED_MENU_COMPLETOS.sql');
      // Intentar obtener todas las categor√≠as para debug
      const { data: allCats } = await supabase
        .from('categories')
        .select('id, name, slug, is_active')
        .order('order_num', { ascending: true });
      if (allCats) {
        console.log('üìã Todas las categor√≠as en BD:', allCats);
        console.log('üìã Categor√≠as activas:', allCats.filter(c => c.is_active));
        console.log('üìã Categor√≠as con slugs v√°lidos:', allCats.filter(c => validCategorySlugs.includes(c.slug)));
      }
    }
    
    // Obtener items destacados
    const { data: featured, error: featuredError } = await supabase
      .from('menu_items')
      .select('*, category:categories(name, slug)')
      .eq('is_available', true)
      .eq('is_featured', true)
      .limit(4);

    if (!featuredError && featured) {
      featuredItems = featured || [];
    }

    // Obtener im√°genes destacadas para el hero slider (solo de categor√≠as v√°lidas)
    const heroImagesSet = new Set<string>();

    for (const category of activeCategories) {
      const { data: items } = await supabase
        .from('menu_items')
        .select('image_url')
        .eq('category_id', category.id)
        .eq('is_available', true)
        .not('image_url', 'is', null)
        .order('is_featured', { ascending: false })
        .limit(1);

      if (items && items[0]?.image_url) {
        heroImagesSet.add(items[0].image_url);
      }
    }

    heroImages = Array.from(heroImagesSet).slice(0, 5);
  } catch (error: any) {
    console.error('Error conectando con Supabase:', error?.message || error);
  }
}

// Mapeo de slugs a nombres de archivos de imagen (solo categor√≠as nuevas)
const categoryImageMap: Record<string, string> = {
  'destacados': 'destacados.png',
  'completos': 'completos.png',
  'sandwiches': 'sandwiches.png',
  'acompanamientos': 'acompanamientos.png',
  'pollo': 'pollo.png',
  'bebidas': 'bebidas.png',
};

function getCategoryImage(category: any): string {
  // Si la categor√≠a tiene image_url, usarlo (puede ser URL de Supabase Storage o ruta relativa)
  if (category.image_url) {
    // Si es una URL completa (Supabase Storage), usarla directamente
    if (category.image_url.startsWith('http://') || category.image_url.startsWith('https://')) {
      return category.image_url;
    }
    // Si es una ruta relativa, usarla
    return category.image_url;
  }
  
  // Si no hay image_url, usar placeholder
  return `/images/ui/placeholders/product-hero.svg`;
}
---

<PublicLayout title="Men√∫ Digital - Completos & Churrascos">
  <!-- Men√∫ de navegaci√≥n sticky -->
  <NavigationMenu client:load categories={activeCategories} />
  
  <!-- Fondo premium limpio - sin patrones -->
  <div class="min-h-screen bg-warm-50 relative">
    
    <div class="relative z-10 flex flex-col">
      <!-- Hero con slider de im√°genes - sin bordes, hasta los l√≠mites -->
      <header class="relative z-30 -mt-20 md:-mt-24">
        {/* Hero slider con t√≠tulo y logo dentro */}
        <HeroDynamic client:load categories={activeCategories} />

          {activeCategories.length > 0 ? (
            <div class="space-y-8 px-4 pt-8">
              <!-- Mensaje -->
              <div class="inline-block">
                  <div class="rounded-2xl px-6 py-3 bg-warm-50" style="box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);">
                  <p class="text-slate-700 text-lg font-medium font-sans">Selecciona una categor√≠a del men√∫</p>
                </div>
              </div>

              <!-- Grid de categor√≠as -->
              <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 max-w-4xl mx-auto">
                    {activeCategories.map((category, index) => {
                      // Obtener la imagen correcta para esta categor√≠a (usar image_url si existe)
                      const categoryImage = getCategoryImage(category);
                  
                  return (
                    <a
                      href={`/${category.slug}`}
                      class="category-btn group relative overflow-hidden"
                      style={`animation-delay: ${index * 0.1}s`}
                      data-category-index={index}
                    >
                      <div class="
                        relative rounded-2xl p-4 h-full min-h-[140px] md:min-h-[160px]
                        bg-warm-50
                        transition-all duration-300
                        group-hover:shadow-xl
                        active:scale-[0.98]
                        overflow-hidden
                      " style="box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08), 0 1px 3px rgba(0, 0, 0, 0.12);">
                        <!-- Imagen de fondo de la categor√≠a -->
                        <div class="absolute inset-0 overflow-hidden rounded-lg bg-warm-100">
                          <img
                            src={categoryImage}
                            alt={category.name}
                            class="w-full h-full object-cover scale-110"
                            loading="lazy"
                            onLoad={() => {
                              console.log('‚úÖ Imagen de categor√≠a cargada en index:', category.name, categoryImage);
                            }}
                            onError={(e) => {
                              console.error('‚ùå Error cargando imagen de categor√≠a en index:', {
                                category: category.name,
                                imageUrl: category.image_url,
                                categoryImage,
                                slug: category.slug
                              });
                              // Si falla, usar placeholder
                              const img = e.target as HTMLImageElement;
                              img.src = '/images/ui/placeholders/product-hero.svg';
                              img.style.opacity = '0.3';
                            }}
                          />
                          <!-- Overlay negro con opacidad -->
                          <div class="absolute inset-0 bg-black/50 group-hover:bg-black/40 transition-all duration-300"></div>
                        </div>
                        
                        <!-- Texto destacado con fondo premium -->
                        <div class="relative z-10 h-full flex items-center justify-center">
                          <span class="
                            font-black text-white text-lg md:text-xl lg:text-2xl tracking-wide
                            px-4 py-2.5 rounded-xl
                            transition-all duration-300 font-sans
                          " style="text-shadow: 3px 3px 6px rgba(0, 0, 0, 1), 0 0 12px rgba(0, 0, 0, 0.8), 0 0 20px rgba(0, 0, 0, 0.6);">
                            {category.name.toUpperCase()}
                          </span>
                        </div>
                      </div>
                    </a>
                  );
                })}
              </div>

              <!-- Items destacados -->
              {featuredItems && featuredItems.length > 0 && (
                <div class="mt-16 max-w-4xl mx-auto">
                  <div class="rounded-3xl p-6 sm:p-8 bg-warm-50" style="box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08), 0 2px 6px rgba(0, 0, 0, 0.12);">
                    <h3 class="font-bold text-tomato-600 text-xl sm:text-2xl mb-6 text-center font-sans">
                      ‚≠ê DESTACADOS ‚≠ê
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                      {featuredItems.map((item: any) => (
                        <a href={`/${item.category?.slug || ''}`} class="block group">
                          <div class="flex items-center gap-4 p-4 rounded-2xl bg-warm-50 hover:shadow-lg transition-all" style="box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);">
                            {item.image_url && (
                              <img 
                                src={item.image_url} 
                                alt={item.name}
                                class="w-16 h-16 object-cover rounded-xl"
                                style="box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);"
                              />
                            )}
                            <div class="flex-1 min-w-0">
                              <h4 class="text-slate-800 font-semibold truncate font-sans">{item.name}</h4>
                              <p class="text-slate-600 text-sm truncate font-sans">{item.description}</p>
                            </div>
                            <span class="text-tomato-600 font-bold whitespace-nowrap font-sans">
                              ${item.price.toLocaleString('es-CL')}
                            </span>
                          </div>
                        </a>
                      ))}
                    </div>
                  </div>
                </div>
              )}
            </div>
          ) : (
            <div class="border-2 border-tomato-300/50 rounded-xl p-8 bg-white/90 backdrop-blur-sm max-w-md mx-auto shadow-lg">
              {!isConfigured ? (
                <>
                  <p class="text-red-600 text-xl mb-4 font-semibold font-sans">‚ö†Ô∏è Configuraci√≥n Pendiente</p>
                  <p class="text-slate-600 mb-4 font-sans">
                    Las variables de entorno de Supabase no est√°n configuradas.
                  </p>
                  <a 
                    href="/admin/login" 
                    class="inline-block px-6 py-2 border-2 border-tomato-500 text-tomato-600 rounded-lg hover:bg-tomato-500 hover:text-white transition-all text-sm font-semibold font-sans"
                  >
                    Acceso Admin
                  </a>
                </>
              ) : (
                <>
                  <p class="text-tomato-600 text-xl mb-4 font-semibold font-sans">Men√∫ en preparaci√≥n</p>
                  <p class="text-slate-600 mb-4 font-sans">
                    No se encontraron categor√≠as activas en la base de datos.
                  </p>
                  <div class="bg-slate-50 rounded-lg p-4 mb-6 text-left">
                    <p class="text-sm font-semibold text-slate-700 mb-2 font-sans">üìã Pasos para solucionar:</p>
                    <ol class="text-sm text-slate-600 space-y-1 list-decimal list-inside">
                      <li>Ejecuta el script SQL: <code class="bg-slate-200 px-1 rounded">database/SEED_MENU_COMPLETOS.sql</code></li>
                      <li>Verifica que las categor√≠as est√©n activas: <code class="bg-slate-200 px-1 rounded">is_active = true</code></li>
                      <li>Verifica que los slugs sean correctos: destacados, completos, sandwiches, acompanamientos, pollo, bebidas</li>
                    </ol>
                  </div>
                  <div class="flex gap-3 justify-center">
                    <a 
                      href="/admin/login" 
                      class="inline-block px-6 py-2 border-2 border-tomato-500 text-tomato-600 rounded-lg hover:bg-tomato-500 hover:text-white transition-all font-semibold font-sans"
                    >
                      Acceso Admin
                    </a>
                  </div>
                </>
              )}
            </div>
          )}
        </div>
      </header>

      <!-- Contenido despu√©s del hero -->
      <div class="relative z-20 pb-12 px-4">

      <!-- Footer -->
      <Footer />
    </div>
  </div>

  <!-- Componente flotante de informaci√≥n Halal -->
  <HalalInfo client:load />
</PublicLayout>

<style>
  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
  }
  
  .category-btn {
    animation: fadeInUp 0.5s ease-out forwards;
    opacity: 0;
    touch-action: manipulation;
  }

  .category-btn > div {
    transition: transform 0.3s ease, scale 0.3s ease;
  }

  .category-btn:hover > div,
  .category-btn:active > div {
    transform: scale(1.05);
  }

  /* Animaci√≥n de reflejo discreto - cada 4 segundos aproximadamente, aleatorio */
  .category-reflect {
    background: linear-gradient(
      135deg,
      transparent 0%,
      transparent 42%,
      rgba(255, 255, 255, 0.12) 48%,
      rgba(255, 255, 255, 0.2) 50%,
      rgba(255, 255, 255, 0.12) 52%,
      transparent 58%,
      transparent 100%
    );
    width: 150%;
    height: 150%;
    transform: translateX(-100%) translateY(-100%) rotate(-45deg);
    opacity: 0;
    animation: reflect-sweep 4s ease-in-out infinite;
    pointer-events: none;
  }

  /* Delays aleatorios para cada bot√≥n (cada 4 segundos aproximadamente) */
  .category-btn[data-category-index="0"] .category-reflect {
    animation-delay: 0.3s;
    animation-duration: 4.1s;
  }
  .category-btn[data-category-index="1"] .category-reflect {
    animation-delay: 1.7s;
    animation-duration: 3.9s;
  }
  .category-btn[data-category-index="2"] .category-reflect {
    animation-delay: 0.1s;
    animation-duration: 4.3s;
  }
  .category-btn[data-category-index="3"] .category-reflect {
    animation-delay: 2.4s;
    animation-duration: 4.0s;
  }
  .category-btn[data-category-index="4"] .category-reflect {
    animation-delay: 1.1s;
    animation-duration: 4.2s;
  }
  .category-btn[data-category-index="5"] .category-reflect {
    animation-delay: 3.0s;
    animation-duration: 3.8s;
  }
  .category-btn[data-category-index="6"] .category-reflect {
    animation-delay: 0.6s;
    animation-duration: 4.4s;
  }
  .category-btn[data-category-index="7"] .category-reflect {
    animation-delay: 2.1s;
    animation-duration: 4.1s;
  }
  .category-btn[data-category-index="8"] .category-reflect {
    animation-delay: 0.9s;
    animation-duration: 3.9s;
  }
  .category-btn[data-category-index="9"] .category-reflect {
    animation-delay: 2.8s;
    animation-duration: 4.2s;
  }

  @keyframes reflect-sweep {
    0%, 95% {
      transform: translateX(-100%) translateY(-100%) rotate(-45deg);
      opacity: 0;
    }
    96% {
      opacity: 0.4;
    }
    98% {
      transform: translateX(200%) translateY(200%) rotate(-45deg);
      opacity: 0.6;
    }
    99% {
      opacity: 0.3;
    }
    100% {
      transform: translateX(200%) translateY(200%) rotate(-45deg);
      opacity: 0;
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-15px);
    }
  }

  .animate-float {
    animation: float 4s ease-in-out infinite;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
